<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#132567"
    tools:context=".direccion">

    <ImageButton
        android:id="@+id/btn_previous4"
        android:layout_width="58dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="#BD2424"
        android:onClick="onClickBtnprevious4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefono"
        app:srcCompat="@drawable/anterior" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="372dp"
        android:layout_height="226dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/candy_cars_logo_2" />

    <TextView
        android:id="@+id/direccion2"
        android:layout_width="339dp"
        android:layout_height="61dp"
        android:text="P-sherman, Calle Wallaby                  24-2 Sidney"
        android:textAlignment="center"
        android:textColor="#EEE2DE"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />

    <TextView
        android:id="@+id/telefono"
        android:layout_width="360dp"
        android:layout_height="29dp"
        android:text="+507 6248-9254/ 6205-1390"
        android:textAlignment="center"
        android:textColor="#EEE2DE"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView17" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView15"
        app:srcCompat="@drawable/location" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/direccion2"
        app:srcCompat="@drawable/phone" />
</androidx.constraintlayout.widget.ConstraintLayout>